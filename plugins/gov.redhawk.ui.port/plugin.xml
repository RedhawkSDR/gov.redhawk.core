<?eclipse version="3.4"?>
<plugin>
   <extension-point id="gov.redhawk.ui.portHandler" name="%extension-point.name" schema="schema/gov.redhawk.ui.portHandler.exsd"/>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="gov.redhawk.ui.commands.category.sca"
            defaultHandler="gov.redhawk.ui.port.handlers.PlotUsesPortHandler"
            id="gov.redhawk.ui.port.command.plot"
            name="%command.name">
         <commandParameter
               id="gov.redhawk.ui.port.command.plot.filterparam"
               name="%commandParameter.name"
               optional="false">
         </commandParameter>
         <commandParameter
               id="gov.redhawk.ui.port.command.plot.listparam"
               name="%commandParameter.name.0"
               optional="true">
         </commandParameter>
      </command>
      <command
            categoryId="gov.redhawk.ui.commands.category.sca"
            defaultHandler="gov.redhawk.ui.port.handlers.PlayUsesPortHandler"
            id="gov.redhawk.ui.port.command.play"
            name="%command.name.0">
         <commandParameter
               id="gov.redhawk.ui.port.command.play.filterparam"
               name="%commandParameter.name.1"
               optional="false">
         </commandParameter>
         <commandParameter
               id="gov.redhawk.ui.port.command.play.listparam"
               name="%commandParameter.name.2"
               optional="true">
         </commandParameter>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="gov.redhawk.ui.port.command.plot"
               label="%command.label"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <or>
                     <instanceof
                           value="gov.redhawk.model.sca.ScaUsesPort">
                     </instanceof>
                     <adapt
                           type="gov.redhawk.model.sca.ScaUsesPort">
                     </adapt>
                  </or>
               </iterate>
            </visibleWhen>
            <parameter
                  name="gov.redhawk.ui.port.command.plot.filterparam"
                  value="plot">
            </parameter>
         </command>
         <command
               commandId="gov.redhawk.ui.port.command.plot"
               label="%command.label.0"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <or>
                     <instanceof
                           value="gov.redhawk.model.sca.ScaUsesPort">
                     </instanceof>
                     <adapt
                           type="gov.redhawk.model.sca.ScaUsesPort">
                     </adapt>
                  </or>
               </iterate>
            </visibleWhen>
            <parameter
                  name="gov.redhawk.ui.port.command.plot.filterparam"
                  value="fft">
            </parameter>
         </command>
         <command
               commandId="gov.redhawk.ui.port.command.play"
               label="%command.label.1"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <or>
                     <instanceof
                           value="gov.redhawk.model.sca.ScaUsesPort">
                     </instanceof>
                     <adapt
                           type="gov.redhawk.model.sca.ScaUsesPort">
                     </adapt>
                  </or>
               </iterate>
            </visibleWhen>
            <parameter
                  name="gov.redhawk.ui.port.command.play.filterparam"
                  value="play">
            </parameter>
         </command>
      </menuContribution>
   </extension>

</plugin>
