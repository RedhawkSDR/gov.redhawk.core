<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<groupId>gov.redhawk.core</groupId>
	<artifactId>releng</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	
	<parent>
		<relativePath>parent</relativePath>
		<groupId>gov.redhawk.development.configuration</groupId>
		<artifactId>parent</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<properties>
		<mil.jpeojtrs.sca-p2-url>http://pinkman.villains.techma.com/p2/tycho/mil.jpeojtrs.sca/SNAPSHOT</mil.jpeojtrs.sca-p2-url>
		<redhawk-core-p2-url>http://pinkman.villains.techma.com/p2/tycho/core</redhawk-core-p2-url>
		<bulkioInterfaces-p2-url>http://pinkman.villains.techma.com/p2/tycho/bulkioInterfaces</bulkioInterfaces-p2-url>
		<nxm-p2-url>http://pinkman.villains.techma.com/p2/nxm/latest/</nxm-p2-url>
		<juno-3.8>http://pinkman.villains.techma.com/p2/eclipse/juno-3.8</juno-3.8>
		<juno>http://download.eclipse.org/releases/juno</juno>
		<orbit>http://pinkman.villains.techma.com/p2/eclipse/orbit/</orbit>
	</properties>

	<repositories>
		<repository>
			<id>juno-3.8</id>
			<layout>p2</layout>
			<url>${juno-3.8}</url>
		</repository>

		<repository>
			<id>juno</id>
			<layout>p2</layout>
			<url>${juno}</url>
		</repository>

		<repository>
			<id>orbit</id>
			<layout>p2</layout>
			<url>${orbit}</url>
		</repository>

		<repository>
			<id>nxm</id>
			<layout>p2</layout>
			<url>${nxm-p2-url}</url>
		</repository>

		<repository>
			<id>redhawk-core</id>
			<layout>p2</layout>
			<url>${redhawk-core-p2-url}</url>
		</repository>

		<repository>
			<id>bulkioInterfaces</id>
			<layout>p2</layout>
			<url>${bulkioInterfaces-p2-url}</url>
		</repository>

		<repository>
			<id>mil.jpeojtrs.sca</id>
			<layout>p2</layout>
			<url>${mil.jpeojtrs.sca-p2-url}</url>
		</repository>
	</repositories>


	<profiles>
		<profile>
			<id>client-rcp</id>
			<activation>
				<activeByDefault>true</activeByDefault>
				<property>
					<name>maven.profile</name>
					<value>client-rcp</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.eclipse.tycho</groupId>
						<artifactId>target-platform-configuration</artifactId>
						<version>${tycho-version}</version>
						<configuration>
							<environments>
								<environment>
									<os>linux</os>
									<ws>gtk</ws>
									<arch>x86</arch>
								</environment>
								<environment>
									<os>linux</os>
									<ws>gtk</ws>
									<arch>x86_64</arch>
								</environment>
								<environment>
									<os>win32</os>
									<ws>win32</ws>
									<arch>x86</arch>
								</environment>
								<environment>
									<os>win32</os>
									<ws>win32</ws>
									<arch>x86_64</arch>
								</environment>
								<environment>
									<os>macosx</os>
									<ws>cocoa</ws>
									<arch>x86_64</arch>
								</environment>
							</environments>
							<dependency-resolution>
								<optionalDependencies>ignore</optionalDependencies>
								<extraRequirements>
									<requirement>
										<type>eclipse-plugin</type>
										<id>org.eclipse.ui</id>
										<versionRange>0.0.0</versionRange>
									</requirement>
									<requirement>
										<type>eclipse-plugin</type>
										<id>org.eclipse.ui.views</id>
										<versionRange>0.0.0</versionRange>
									</requirement>
									<requirement>
										<type>eclipse-plugin</type>
										<id>org.eclipse.ui.workbench</id>
										<versionRange>0.0.0</versionRange>
									</requirement>
									<requirement>
										<type>eclipse-plugin</type>
										<id>org.eclipse.ui.navigator</id>
										<versionRange>0.0.0</versionRange>
									</requirement>
									<requirement>
										<type>eclipse-plugin</type>
										<id>org.eclipse.jface.databinding</id>
										<versionRange>0.0.0</versionRange>
									</requirement>
									<requirement>
										<type>eclipse-plugin</type>
										<id>org.eclipse.ui.ide</id>
										<versionRange>0.0.0</versionRange>
									</requirement>
									<requirement>
										<type>eclipse-plugin</type>
										<id>org.eclipse.ui.forms</id>
										<versionRange>0.0.0</versionRange>
									</requirement>
									<requirement>
										<type>eclipse-plugin</type>
										<id>org.eclipse.emf.edit.ui</id>
										<versionRange>0.0.0</versionRange>
									</requirement>
									<requirement>
										<type>eclipse-plugin</type>
										<id>org.eclipse.wst.sse.ui</id>
										<versionRange>0.0.0</versionRange>
									</requirement>
									<requirement>
										<type>eclipse-plugin</type>
										<id>org.eclipse.draw2d</id>
										<versionRange>0.0.0</versionRange>
									</requirement>
									<requirement>
										<type>eclipse-plugin</type>
										<id>org.eclipse.ui.views.properties.tabbed</id>
										<versionRange>0.0.0</versionRange>
									</requirement>
									<requirement>
										<type>eclipse-plugin</type>
										<id>org.omg.cos</id>
										<versionRange>0.0.0</versionRange>
									</requirement>
								</extraRequirements>
							</dependency-resolution>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>client-rap</id>
			<activation>
				<activeByDefault>false</activeByDefault>
				<property>
					<name>maven.profile</name>
					<value>client-rap</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.eclipse.tycho</groupId>
						<artifactId>target-platform-configuration</artifactId>
						<version>${tycho-version}</version>
						<configuration>
							<dependency-resolution>
								<optionalDependencies>ignore</optionalDependencies>
								<extraRequirements>
									<requirement>
										<type>eclipse-plugin</type>
										<id>org.eclipse.rap.ui</id>
										<versionRange>0.0.0</versionRange>
									</requirement>
									<requirement>
										<type>eclipse-plugin</type>
										<id>org.eclipse.rap.ui.views</id>
										<versionRange>0.0.0</versionRange>
									</requirement>
									<requirement>
										<type>eclipse-plugin</type>
										<id>org.eclipse.rap.ui.workbench</id>
										<versionRange>0.0.0</versionRange>
									</requirement>
									<requirement>
										<type>eclipse-plugin</type>
										<id>org.eclipse.rap.ui.navigator</id>
										<versionRange>0.0.0</versionRange>
									</requirement>
									<requirement>
										<type>eclipse-plugin</type>
										<id>org.eclipse.rap.ui.forms</id>
										<versionRange>0.0.0</versionRange>
									</requirement>
									<requirement>
										<type>eclipse-plugin</type>
										<id>org.eclipse.rap.ui.views.properties.tabbed</id>
										<versionRange>0.0.0</versionRange>
									</requirement>
									<requirement>
										<type>eclipse-plugin</type>
										<id>org.eclipse.rap.jface.databinding</id>
										<versionRange>0.0.0</versionRange>
									</requirement>
									<requirement>
										<type>eclipse-plugin</type>
										<id>org.eclipse.emf.rap.common.ui</id>
										<versionRange>0.0.0</versionRange>
									</requirement>
									<requirement>
										<type>eclipse-plugin</type>
										<id>org.eclipse.emf.rap.edit.ui</id>
										<versionRange>0.0.0</versionRange>
									</requirement>
									<requirement>
										<type>eclipse-plugin</type>
										<id>org.eclipse.emf.rap</id>
										<versionRange>0.0.0</versionRange>
									</requirement>
									<requirement>
										<type>eclipse-plugin</type>
										<id>javax.servlet</id>
										<versionRange>0.0.0</versionRange>
									</requirement>
								</extraRequirements>
							</dependency-resolution>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
